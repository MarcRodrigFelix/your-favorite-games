
<h2>Edit <%= @game.title %>!</h2>


  <form action="/games/<%= @game.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <input type="text" name="new_title" placeholder="Edit Game Title">
    <input type="text" name="new_genre" placeholder="Edit Genre">
    <input type="text" name="new_reason" placeholder="Edit Reason">
    <input type="submit" name="edit" value="Edit">
  </form>

<br>
<br>
<a href="/games/<%= @game.id %>">Back</a>
